<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    android:layout_below="@id/digsCount"
    android:background="@color/digsBackground"
    tools:context=".AgendaActivity" >

    
    <com.example.livemood.views.LMTextView
         android:id="@+id/diggerName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/coloredText"
         />
    
    <com.example.livemood.views.LMTextView
         android:id="@+id/digContent"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/digsText"
         android:layout_below="@id/diggerName"
         />

   	
    
</RelativeLayout>