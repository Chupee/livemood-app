<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:layout_below="@id/digsCount"
    android:background="@color/digsBackground"
    tools:context=".AgendaActivity" >

    <ImageView
        android:id="@+id/diggerImage"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@string/hello_world"
        android:layout_marginRight="@dimen/activity_horizontal_padding"
        />
    
    <com.example.livemood.views.LMTextView
         android:id="@+id/diggerName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/coloredText"
         />
    
    <com.example.livemood.views.LMTextView
         android:id="@+id/digContent"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/digsText"
         android:layout_below="@id/diggerName"
         />

   	
    
</RelativeLayout>