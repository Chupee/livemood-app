<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AgendaActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:background="@layout/list_item_border">
    
    <ImageView
        android:id="@+id/artistImage"
        android:layout_width="@dimen/concert_list_item_thumbmail_width"
        android:layout_height="@dimen/concert_list_item_thumbmail_height"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@string/hello_world"
        android:layout_marginRight="8dp"
        />
    
    <com.example.livemood.views.LMTextView
         android:id="@+id/concertName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/artistImage"
         android:textColor="@color/coloredText"
         android:textStyle="bold"
         />
    
    <com.example.livemood.views.LMTextView
         android:id="@+id/labelName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/artistImage"
         android:layout_below="@id/concertName"
         android:textStyle="italic"
         android:textSize="@dimen/concert_list_label_label"
         android:textColor="@color/text"
         />
    
    <com.example.livemood.views.LMTextView
         android:id="@+id/reviewCount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/artistImage"
         android:layout_alignParentBottom="true"
         android:textSize="@dimen/concert_list_label_label"
         android:textColor="@color/text"
         />

    
</RelativeLayout>