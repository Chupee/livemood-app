<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AgendaActivity" >
    
    <ImageView 
        android:id="@+id/artistImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/hello_world"
        android:layout_marginRight="3dp"
        android:background="@color/coloredText"
        />
    
    <TextView
         android:id="@+id/concertName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/artistImage"
         android:layout_alignTop="@id/artistImage"
         android:background="@color/coloredText"
         />
    
    <TextView
         android:id="@+id/labelName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/artistImage"
         android:layout_below="@id/concertName"
         android:background="@color/coloredText"
         />
    
    <TextView
         android:id="@+id/reviewCount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/artistImage"
         android:layout_alignBottom="@id/artistImage"
         android:background="@color/coloredText"/>
    
    <TextView
         android:id="@+id/date"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:background="@color/coloredText"/>
    
    <TextView
         android:id="@+id/placeName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_toRightOf="@id/date"
         android:background="@color/coloredText"/>
    
    <TextView
         android:id="@+id/hasBook"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignBottom="@id/artistImage"
         android:background="@color/coloredText"/>
    
    

</RelativeLayout>